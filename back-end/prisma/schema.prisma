generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // Define o banco de dados SQLite no arquivo dev.db
}

model User {
  id        String   @id
  name      String
  email     String   @unique
  password  String
  status    Boolean  @default(true)
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
